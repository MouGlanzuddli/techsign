<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>MyJobsServlet</servlet-name>
        <servlet-class>controller.MyJobsServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MyJobsServlet</servlet-name>
        <url-pattern>/MyJobsServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CandidateViewListServlet</servlet-name>
        <servlet-class>controller.CandidateViewListServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CandidateViewListServlet</servlet-name>
        <url-pattern>/CandidateViewListServlet</url-pattern>
        <url-pattern>/candidate-view-list</url-pattern>
    </servlet-mapping>
    
    <!-- Các servlet khác nếu có -->
</web-app>
